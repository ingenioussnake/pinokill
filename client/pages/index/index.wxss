/**index.wxss**/
@import '../../templates/busy.wxss';
.welcome {
    display: flex;
    align-items: center;
    flex-direction: column;
    margin-top: 4rem;
    margin-bottom: 3rem;
}

.welcome .title {
    font-size: x-large;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.room-actions {
  margin-top: 3rem;
  padding: 0 2rem;
}

.join-room {
    display: flex;
    margin-top: 1rem;
}

.join-room input {
    flex-grow: 0;
    width: 150px;
}

.join-room button {
    flex-grow: 1;
}