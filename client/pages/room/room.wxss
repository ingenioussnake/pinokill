/* pages/room/room.wxss */
@import './seat.wxss';
@import '../../vendor/weui/style/weui.wxss';
page {
    width: calc(100% - 20rpx);
    height: calc(100% - 20rpx);
    padding: 10rpx;
}

.container {
    display: flex;
    width: 100%;
    height: 100%;
}

.left-seats, .right-seats {
    width: auto;
    flex-grow: 0;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    overflow-y: auto;
}

.right-seats {
    flex-direction: column-reverse;
}

.main {
    flex-grow: 1;
    padding: 10rpx;
    display: flex;
    flex-direction: column;
}

.content {
    flex-grow: 1;
    overflow-y: auto;
}

/* game configuration */
.game-config.center {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}

.config-title {
    font-size: 48rpx;
}

.config-description {
    font-size: 32rpx;
}

.actions {
    flex-grow: 0;
    flex-basis: auto;
    margin: 20rpx;
}

.actions button {
    margin-top: 10rpx;
}

/* messages */

.system-message {
    font-size: 14px;
    line-height: 14px;
    color: #fff;
    background: #cecece;
    border-radius: 4px;
    display: inline-block;
    padding: 8rpx 15rpx;
    margin: 30rpx 0 10rpx;
}